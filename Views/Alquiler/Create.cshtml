@model app_house.Models.Alquiler

@{
    ViewData["Title"] = "Crear";
}


<h4>Alquiler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaAlquiler" class="control-label"></label>
                <input asp-for="FechaAlquiler" class="form-control" />
                <span asp-validation-for="FechaAlquiler" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clienteid" class="control-label"></label>
                <select asp-for="Clienteid" class ="form-control" asp-items="ViewBag.Clienteid"></select>
            </div>
            <div class="form-group">
                <label asp-for="Casaid" class="control-label"></label>
                <select asp-for="Casaid" class ="form-control" asp-items="ViewBag.Casaid"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary Botoncrear2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="BotonVolver">Volver</a>
</div>

