@model IEnumerable<app_house.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white">CLientes</h1>

<p>
    <a asp-action="Create" class="BotonCrear">Crear</a>
</p>
<table class="table table-success table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clientename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clienteapellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fechanacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Clientename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clienteapellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fechanacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                <a asp-action="Edit" class="BotonEliminar mt-5" asp-route-id="@item.Clienteid">Editar</a> |
                <a class="BotonEditar mt-5" onclick="eliminarcliente(@item.Clienteid)">eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
