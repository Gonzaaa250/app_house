@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar sesion";
}

<header>
    <h1 class="text-white">@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
        asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-danger">Click aqui para cerrar sesion</button>
            </form>
        }
        else
        {
            <p>
                Ha cerrado correctamente la sesión de la aplicación.</p>
        }
    }
</header>
